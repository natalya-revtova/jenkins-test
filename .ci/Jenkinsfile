#!groovy

pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Install') {
            steps {
                sh 'make install'
            }
        }
        stage('Build') {
            steps {
                sh 'make build'
            }
        }
        stage('Lint') {
            steps {
                sh 'make lint'
            }
        }
        stage('Test') {
            steps {
                sh 'make test'
                sh 'make coverage'
                sh 'make clean'
            }
        }
    }
    post {
        always {
            script {
                sh 'cat codecov.yml | curl --data-binary @- https://codecov.io/validate'
                sh 'curl -s https://codecov.io/bash | bash -s'
            }
        }
    }
}