#!groovy

pipeline {
    agent {
        label 'master'
    }
    stages {
        stage('Build') {
            steps {
                sh 'go build -o ${BIN_DIR}/${NAME}.exe ${NAME}.go'
                //sh 'make build'
            }
        }
        stage('Lint') {
            steps {
                sh 'golangci-lint run'
                //sh 'make lint'
            }
        }
        stage('Test') {
            steps {
                sh 'go test -cover -coverprofile=${TEST_DIR}/coverage.out'
                //sh 'make test'
                //sh 'make coverage'
                //sh 'make clean'
            }
        }
    }
}